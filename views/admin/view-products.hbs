<section>
  <div class="container">

    <div class="row mt-5">
     
        <a href="admin/add-product" class="btn btn-success ml-auto">Add Product</a>
       </div>
      <table class="table mt-3">
        <thead >
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th>Image</th>
            <th ></th>
            <th ></th>
            
          

          </tr>
        </thead>
        {{#each products}}
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>{{this.Name}}</td>
           
            <td>{{this.Category}}</td>
            <td>{{this.Description}}</td>
            <td><i class="fa fa-inr" aria-hidden="true"></i> {{this.Price}}</td>
             <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"></td>
             <td>
               <a href="admin/edit-product/{{this._id}}" class="btn btn-secondary">Edit</a>
                 </td>
            <td>
               <a href="admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do You Want to delete {{this.Name}}?')">Delete</a>
             </td>
          </tr>
          {{/each}}

        </tbody>
      </table>


   
  </div>
</section>