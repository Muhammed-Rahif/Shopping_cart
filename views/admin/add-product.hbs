<section>
    <div class="container mt-3">
        <div class="col-md-6">
        <h2 class="ml-md-5">Add Product</h2>
        <div class="row">
            <form action="/admin/add-product" method="POST" class="mt-3" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Product Name</label>
                    <input type="text" class="form-control border-success" name="Name" placeholder="Product Name">
                </div>
                <div class="form-group">
                    <label for="">Category</label>
                    <input type="text" class="form-control border-success" name="Category"   placeholder="Category">
                </div>
                 <div class="form-group">
                    <label for="">Price</label>
                    <input type="text" class="form-control border-success" name="Price"  placeholder="Price">
                </div>
                 <div class="form-group">
                    <label for="">Description</label>
                    <input type="text" class="form-control border-success" name="Description"  placeholder="Description">
                </div>
                 <div class="form-group">
                    <label for="">Image</label>
                    <input type="file" class="form-control border-success" name="Image"  placeholder="Choose File">
                </div>
                <input type="submit" class=" btn btn-success"  placeholder="">
            
            </form>
        </div>
        </div>
    </div>
</section>